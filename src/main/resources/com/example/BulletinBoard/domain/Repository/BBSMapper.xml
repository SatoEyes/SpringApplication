<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.BulletinBoard.domain.Repository.BBSMapper">
	<!-- 一覧 -->
	<select id="findAll" resultType="com.example.BulletinBoard.domain.Entity.BBS">
		SELECT * FROM bulletin_board
	</select>
	<!-- 登録 -->
	<insert id="create" parameterType="com.example.BulletinBoard.domain.Entity.BBS">
		INSERT INTO bulletin_board
		(createdate, title, content, createuser)
		VALUES
		(#{createDate}, #{title}, #{content}, #{createUser})
	</insert>
	<!-- 編集、詳細 -->
	<select id="findById" resultType="com.example.BulletinBoard.domain.Entity.BBS">
		SELECT * FROM bulletin_board
		WHERE id = #{id}
	</select>
	<!-- 更新 -->
	<update id="update" parameterType="com.example.BulletinBoard.domain.Entity.BBS">
		UPDATE bulletin_board SET
		createdate = #{createDate},
		title = #{title},
		content = #{content},
		createuser = #{createUser}
		WHERE id = #{id}
	</update>
	<!-- 削除 -->
	<delete id="delete" parameterType="com.example.BulletinBoard.domain.Entity.BBS">
		DELETE FROM bulletin_board
		WHERE id = #{id}
	</delete>
</mapper>